doctype html
html
  head
    title Add Item Page
    style
      include ../assets/css/nav.css
    style
      include ../assets/css/content.css
    style
      include ../assets/css/style.css
    style
      include ../assets/css/error.css   
    script.
      data =!{JSON.stringify(login)} 
    script
      include ../js/edit.js
  body
    include ./nav.pug
    section(class="interface" id="interface") 
      div(class="navigation")
        div(class="n1")
          div(class="menu" id="menu_btn")
            div(class="line_1")
            div(class="line_2")
            div(class="line_3") 
          div(class="search") 
            input(type="text", name="" placeholder="Search")
        
        div(class="profile")
          img(src="images/logo.png", alt="profile")
      h3(class="page") ITEMS
      div(class="values")
        div(class="val-box")
          img(src="images/logo.png", alt="")
          div 
            h3 8,267
            span Total Orders
        div(class="val-box")
          img(src="images/logo.png", alt="")
          div 
            h3 2,267
            span Product Sell
        div(class="val-box")
          img(src="images/logo.png", alt="")
          div 
            h3 5,267
            span Alvailable
        div(class="val-box")
          img(src="images/logo.png", alt="")
          div 
            h3 1,200
            span This Month
        
      dir(class="board")
        table(class="board_table")  
          thead
            tr
              td ID
              td Item
              td Type
              td Price 
              td Discount
              td Weight 
              td Total 
              td Rating
              td Edit
              td Delete              
          tbody
          each item in login
            each single in item.stock
              tr
                td(class="people-designation")
                  h5=single.stockId
                td(class="people-designation")
                  h5=item.name                  
                td(class="people-designation")
                  h5=item.type
                td(class="active")
                  input(class="input" type="text", name="date", value=`Rs ${single.price}` readonly  required)
                td(class="role input")
                  input(class="input" type="text", name="date", value=`${single.discount}%` readonly  required)
                td(class="role input")
                  input(class="input" type="text", name="date", value=`${single.size} ${item.measurement}` readonly  required)
                td(class="role input")
                  input(class="input" type="text", name="date", value=`${single.quantity}` readonly  required)
                  
                td(class="role")
                  p=single.rating       
                td(class="edit" id=single.stockId)
                  button(type='button' class=' btn' value="Continue" onclick=`onEdit('${JSON.stringify(item)}')`) Edit
                td(class="edit")
                  button(type='button' class=' btn' value="Continue" onclick=`onDelete('${JSON.stringify(item)}')`) Delete                     
  include ./error.pug
script
      include ../js/editProduct.js