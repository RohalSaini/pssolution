doctype html
html
  head
    title Add Item Page
    style
      include ../assets/css/navigation.css
    style
      include ../assets/css/error.css
    style
      include ../assets/css/forms.css
    script 
      include ../js/add.js
  body
  include ./navigation.pug
  form(class='form' id='form' onsubmit="onSave(event)")  
          div(class="text_field")
            input(
              type="number"
              id= 'serialNumber'
              required
            ) 
            span()
            label(for="serialNumber") Serial Number

          div(class="text_field")
            input(
              type="text"
              id= 'name'
              required
            ) 
            span()
            label(for="name") Name
    
          div(class="text_field")
            input(
			  type="number" step="0.001"
              id='price'
              required
            ) 
            span()
            label(for="email") Price

          div(class="text_field")
            input(
              type='text'
              id='description'
              required
            ) 
            span()
            label(for="description") Description 

          div(class="text_field")
            input(
              type='text'
              id='imageUrl'
              required
            ) 
            span()
            label(for="imageUrl") ImageUrl 

          div(class="text_field")
            input(
              type='number'
              id='total'
              required
            ) 
            span()
            label(for="total") Total

          select(name='type' id='type')
            option(value="food") Food
            option(value="vegetables") Vegetables
            option(value="oil") Oil
            option(value="shirts") Shirts
          
           
          input(
            value ='Login'
              type='submit'
            )

  include ./error.pug 